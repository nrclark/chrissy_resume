%%%%%%%%%%%%%% Title %%%%%%%%%%%%%%
\newcommand{\nrctitle}[5]{%
\setlength{\mylength}{\widthof{\huge \textbf {#1}}}%
\noindent \begin{minipage}[b]{\textwidth}%
\noindent \begin{minipage}[b]{\mylength}%
    \begin{flushleft}%
        \huge \textbf {#1\vspace{0.1em}}\\%
    \end{flushleft}%
\end{minipage}%
\noindent \begin{minipage}[b]{\dimexpr \textwidth - \mylength \relax}%
    \begin{flushright}%
        \noindent \textit{#5}\\%
        \textit{#2 $\bullet$ #3 $\bullet$ #4}\\%
    \end{flushright}%
\end{minipage}%
\hrule%
\smallskip%
\end{minipage}%
}
%%%%%%%%%%%%%% One-Off Columns%%%%%%%%%%%%%%%%%%
% Manually-set Column
\newcommand{\nrcmanualcol}[2]{
\noindent 
\begin{minipage}[t]{#1\textwidth}
\begin{flushleft} 
#2
\end{flushleft}
\end{minipage}
}
%%%%%%%%%%%%%% Single-Section %%%%%%%%%%%%%%%%%%
%

\newcommand{\nrcsinglesection}[2]{
\setlength{\mylength}{\widthof{\makeheader{#1:\ }}}
\noindent \begin{minipage}[t]{\mylength}
\begin{flushleft} 
\makeheader{#1:\ }
\end{flushleft}
\end{minipage}
\noindent \begin{minipage}[t]{\dimexpr \textwidth - \mylength \relax}
\begin{flushleft} 
\noindent #2
\end{flushleft}
\end{minipage}
\par \smallskip \smallskip
}

\newcommand{\nrccolstring}[2]{%
  \begingroup
  \setlength{\registerb}{\widthof{#2}}%
  \setlength{\registera}{\dimexpr \linewidth - \registerb \relax}%
  \noindent\begin{minipage}[t]{\registera}
    \raggedright #1
  \end{minipage}%
  \begin{minipage}[t]{\registerb}
    \raggedleft #2
  \end{minipage}%
\endgroup}

\newcommand{\nrccolstringb}[2]{%
  \begingroup
  \setlength{\registerb}{\widthof{#2}}%
  \setlength{\registera}{\dimexpr \linewidth - \registerb \relax}%
  \noindent\begin{minipage}[t]{\registera}
    \raggedright #1
  \end{minipage}%
  \begin{minipage}[t]{\registerb}
    \raggedleft #2
  \end{minipage}%
\endgroup}
%%%%%%%%%%%% Making Two Columns%%%%%%%%%%%%%%%
\newcommand{\nrctwocols}[2]{%
\hrule%
\begingroup%
\setlength\multicolsep{0pt}%
\begin{multicols}{2}%
\setlength{\columnseprule}{0.4pt}%
\setlength{\columnsep}{0.5\linewidth}%
\begin{flushleft}#1\end{flushleft}%
\columnbreak%
\begin{flushright}#2\end{flushright}%
\columnbreak%
\end{multicols}
\endgroup
}
